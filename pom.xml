<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.aljoschability.eclipse</groupId>
	<artifactId>com.aljoschability.eclipse.tools.master</artifactId>
	<version>0.2.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<tycho.version>0.21.0</tycho.version>
		<xtend.version>2.6.0</xtend.version>
	</properties>
	<modules>
		<!-- bundles -->
		<module>bundles/com.aljoschability.eclipse.tools.edogen</module>
		<module>bundles/com.aljoschability.eclipse.tools.edogen.ui</module>
		<module>bundles/com.aljoschability.eclipse.tools.madowedi</module>
		<module>bundles/com.aljoschability.eclipse.tools.madowedi.ui</module>
		<module>bundles/com.aljoschability.eclipse.tools.promato</module>
		<module>bundles/com.aljoschability.eclipse.tools.promato.ui</module>

		<!-- features -->
		<module>features\com.aljoschability.eclipse.tools.edogen.feature</module>
		<module>features\com.aljoschability.eclipse.tools.madowedi.feature</module>
		<module>features\com.aljoschability.eclipse.tools.promato.feature</module>

		<!-- repository -->
		<module>repositories\com.aljoschability.eclipse.tools.repository</module>

		<!-- tests -->
		<!--
		<module>tests\com.aljoschability.eclipse.tools.edogen.tests</module>
		<module>tests\com.aljoschability.eclipse.tools.madowedi.tests</module>
		<module>tests\com.aljoschability.eclipse.tools.promato.tests</module>
		-->
	</modules>
	<repositories>
		<!-- add eclipse luna repository to resolve basic dependencies -->
		<repository>
			<id>eclipse-luna</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/releases/luna</url>
		</repository>
		<repository>
			<id>eclipse-license</id>
			<url>http://download.eclipse.org/cbi/updates/license/</url>
			<layout>p2</layout>
		</repository>
	</repositories>
	<build>
		<plugins>
			<!-- enable tycho build extension -->
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho.version}</version>
				<extensions>true</extensions>
			</plugin>
			<!-- enable build environments -->
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<environments>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>macosx</os>
							<ws>cocoa</ws>
							<arch>x86_64</arch>
						</environment>
					</environments>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
